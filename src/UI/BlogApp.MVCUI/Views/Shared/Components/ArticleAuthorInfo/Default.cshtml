@model ArticleAuthorInfoVM

<div class="post-author bgimage-cover" data-image-src="images/upload/about-author-bg-image.jpg">
    <div class="post-author-details text-center">
        <figure>
            <img src="data:image/*;base64,@Model.Image" alt="@Model.AuthorName" />
        </figure>
        <h3>@Model.AuthorName</h3>
        <div class="post-author-description">
            <p>@Model.Biography</p>
        </div>
        <ul class="post-author-social-media">
            <li><a href="#" target="_blank"><i class="fa-brands fa-facebook"></i></a></li>
            <li><a href="#" target="_blank"><i class="fa-brands fa-twitter"></i></a></li>
            <li><a href="#" target="_blank"><i class="fa-brands fa-google"></i></a></li>
            <li><a href="#" target="_blank"><i class="fa-brands fa-pinterest-p"></i></a></li>
            <li><a href="#" target="_blank"><i class="fa-brands fa-instagram"></i></a></li>
        </ul>
    </div>
    <div class="post-author-overlay"></div>
</div>