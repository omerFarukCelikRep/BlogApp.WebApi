@model CommentAddVM

<div class="post-leave-comment">
    <div class="page-title subtitle">
        <h2>Leave a comment</h2>
    </div>
    <form class="contact-form comment-input" asp-controller="Comment" asp-action="Add" method="post">
        @Html.HiddenFor(x => x.ArticleId)
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <label asp-for="UserName"></label> *
                    <input asp-for="UserName" required />
                </div>
                <div class="box">
                    <label asp-for="Text"></label> *
                    <textarea asp-for="Text" required></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <button type="submit">Send</button>
            </div>
        </div>
    </form>
</div>